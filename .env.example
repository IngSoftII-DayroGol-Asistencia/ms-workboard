# Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
# For local development with SQLite
DATABASE_URL=sqlite:///./data/workboard.db

# For PostgreSQL (local or Docker)
# DATABASE_URL=postgresql://workboard_user:workboard_pass@localhost:5432/workboard_db

# For Google Cloud SQL (future migration)
# DATABASE_URL=postgresql+pg8000://user:password@/dbname?unix_sock=/cloudsql/PROJECT:REGION:INSTANCE

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
